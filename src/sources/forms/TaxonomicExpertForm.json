    "Taxon": {
        "title": "Taxonomic & Research Scope",
        "jsonPath": "$['schema:Taxon']",
        "type": "object",
        "fields": [
            {
                "jsonPath": "$['schema:Taxon']['schema:discipline']",
                "title": "Taxonomic discipline",
                "type": "string",
                "description": "The taxonomic discipline that you are an expert in. For example: Entomology, Botany, Ichthyology, etc.",
                "required": false
            },
            {
                "jsonPath": "$['schema:Taxon']['schema:additionalType']",
                "title": "Taxonomic sub-discipline",
                "type": "string",
                "description": "The taxonomic sub-discipline. For example: Coleoptera, Lepidoptera, Diptera, etc.",
                "required": false
            },
            {
                "jsonPath": "$['schema:Taxon']['schema:about']",
                "title": "Taxonomic scope",
                "type": "string",
                "description": "You can list in more detail the Taxonomic, orders, Families or genus you are an expert on. Please if possible write the scientific names and english common name e.g. Hymenoptera/bees ",
                "required": false
            },
            {
                "jsonPath": "$['schema:Taxon']['schema:spatialCoverage']",
                "title": "Geographic region",
                "type": "string",
                "description": "The geographic region that you are an expert in. For example: Europe, South America, Africa, etc.",
                "required": false
            },
            {
                "jsonPath": "$['schema:Taxon']['schema:temporalCoverage']",
                "title": "Stratigraphy age",
                "type": "string",
                "description": "The stratigraphy age that you are an expert in. For example: Cretaceous, Jurassic, etc.",
                "required": false
            },
            {
                "jsonPath": "$['schema:Taxon']['schema:measurementTechnique']",
                "title": "Taxonomic methodology",
                "description": "The taxonomic methodology that you are an expert in. For example: DNA barcoding, Morphology, etc.",
                "type": "multi-select",
                "options": [
                    "Morphological",
                    "Molecular/genomica",
                    "bioacoustic",
                    "Integrative",
                    "cladistics",
                    "faunistics",
                    "other" 
                ],
                "required": false
            },
            {
                "jsonPath": "$['schema:Taxon']['schema:ResearchProject']",
                "title": "Applied research",
                "type": "multi-string",
                "description": "Keywords that describe your expertise. For example: Taxonomy, Biodiversity, Conservation, etc.",
                "required": false
            }
        ]
    },
    "occupation": {
        "title": "Education and experience",
        "jsonPath": "$['schema:occupation']",
        "type": "object",
        "fields": [
            {
                "jsonPath": "$['schema:occupation']['schema:educationalLevel']",
                "title": "Education Level",
                "description": "Select the highest level of education you have received. You can choose multiple options.",
                "type": "multi-select",
                "options": [
                  "Practical education or apprenticeship",
                  "Undergraduate diploma or certificate",
                  "Bachelor's degree",
                  "Master's degree",
                  "PhD or doctorate",
                  "Citizen scientist training",
                  "Self-taught"
                ],
                "required": false
            },
            {
                "jsonPath": "$['schema:occupation']['schema:employmentType']",
                "title": "Employment Status",
                "description": "Provide your current employment status. This information helps with statistical analysis and gives users of the marketplace insight into the professional experience of the expert. You can select up to two options.",
                "type": "multi-select",
                "options": [
                  "Tenured professor (Full time)",
                  "Tenured professor (Part time)",
                  "Permanent researcher (Full time)",
                  "Permanent researcher (Part time)",
                  "Post-doctoral researcher (Full time)",
                  "Post-doctoral researcher (Part time)",
                  "Master student (Full time)",
                  "Master student (Part time)",
                  "Undergraduate student (Full time)",
                  "Undergraduate student (Part time)",
                  "Permanent Industry researcher (Full time)",
                  "Permanent Industry researcher (Part time)",
                  "Temporary Industry Researcher (Full time)",
                  "Temporary Industry Researcher (Part time)",
                  "Honorary researcher",
                  "Permanent curator (Full time)",
                  "Permanent curator (Part time)",
                  "Temporary curator (Full time)",
                  "Temporary curator (Part time)",
                  "Freelance taxonomist (Full time)",
                  "Freelance taxonomist (Part time)",
                  "Citizen Scientist",
                  "Retired"
                ],
                "required": false,
                "maxSelections": 2
              },
              {
                "jsonPath": "$['schema:occupation']['schema:yearsInOperation']",
                "title": "Taxonomy Experience",
                "description": "Select your years of experience in taxonomy. This helps gauge your professional background in the field.",
                "type": "select",
                "options": [
                  "0 - 5 years",
                  "6 - 10 years",
                  "11 - 15 years",
                  "16 - 20 years",
                  "21 - 25 years",
                  "26 - 30 years",
                  "> 30 years"
                ],
                "required": false
              },
              {
                "title": "Publication Number",
                "jsonPath": "$['schema:occupation']['schema:publication']",
                "description": "Enter the number of publications related to taxonomy.",
                "type": "array",
                "fields": [
                    {
                        "jsonPath": "$['schema:occupation']['schema:publication']['index']['identifier']",
                        "title": "Identification keys",
                        "description": "The number of identification keys",
                        "type": "string",
                        "required": false
                    },
                    {
                        "jsonPath": "$['schema:occupation']['schema:publication']['index']['ScholarlyArticle']",
                        "title": "Research papers",
                        "description": "The number of scientific papers",
                        "type": "string",
                        "required": false
                    },
                    {
                        "jsonPath": "$['schema:occupation']['schema:publication']['index']['Book']",
                        "title": "Books",
                        "description": "The number of books",
                        "type": "string",
                        "required": false
                    },
                    {
                        "jsonPath": "$['schema:occupation']['schema:publication']['index']['CreativeWork']",
                        "title": "Other",
                        "description": "The number of other publications",
                        "type": "string",
                        "required": false
                    }
                ]
            }
        ]
    },
    "course": {
